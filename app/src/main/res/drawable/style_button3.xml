<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="#E91E63"
                android:endColor="#E91E63"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E91E63" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4CAF50"
                android:endColor="#4CAF50"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#4CAF50" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>